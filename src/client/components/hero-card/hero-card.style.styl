.hero-card
    border: 1px solid gray
    padding: 10px
    height: auto
    display: flex
    align-items: center
    flex-direction: column
    border-radius: 6px
    position: relative

    &__background
        position: absolute
        width: 100%
        height: 100%
        top: 0
        border-radius: 6px
        filter: blur(4px)

    &__foreground
        backdrop-filter: blur(10px)
        text-align: center
        margin: 0
        padding: 0.83rem 0
        background-color: brown
        width: 95%
        cursor: pointer
        transition: all 0.5s
        &:hover
            transform: scale(1.05)
        @media (min-width: 1024px)
            width: 60%

    &__image
        width: 100%
        height: 150px
