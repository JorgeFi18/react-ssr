{
  "name": "public-api-react",
  "version": "1.0.0",
  "description": "SSR react app",
  "main": "index.js",
  "scripts": {
    "build:client": "webpack --config webpack.prod.js",
    "build:server": "babel src --out-dir dist",
    "build": "npm run build:client && npm run build:server",
    "start": "node ./dist/server/index.js",
    "dev:client": "webpack --watch --config webpack.dev.js",
    "dev:server": "nodemon --exec babel-node src/server/index.js",
    "dev": "npm-run-all --parallel dev:client dev:server",
    "cy:run": "cypress run --headed",
    "cy:open": "cypress open",
    "test:unit": "jest --config ./jest.config.json",
    "test:e2e": "start-server-and-test dev :3000 cy:run",
    "test:locale2e": "start-server-and-test dev :3000 cy:open",
    "heroku-prebuild": "npm install --dev"
  },
  "author": "jfigueroa",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "babel-loader": "^8.1.0",
    "babel-plugin-css-modules-transform": "^1.6.2",
    "css-loader": "^4.3.0",
    "cypress": "^5.2.0",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "react-test-renderer": "^16.13.1",
    "start-server-and-test": "^1.11.3",
    "style-loader": "^1.2.1",
    "stylus": "^0.54.8",
    "stylus-loader": "^3.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^5.1.4"
  },
  "dependencies": {
    "axios": "^0.20.0",
    "express": "^4.17.1",
    "moment": "^2.28.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
